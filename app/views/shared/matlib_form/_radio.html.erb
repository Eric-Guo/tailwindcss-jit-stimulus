<% id ||= SecureRandom.uuid %>
<% label ||= '' %>
<% value ||= '' %>
<% name ||= '' %>
<% class_name ||= '' %>
<% disabled ||= false %>

<div class="matlib-form-radio <%= class_name %>">
  <input type="radio" id="<%= id %>" value="<%= value %>" name="<%= name %>" <%= disabled ? 'disabled' : '' %> />
  <label for="<%= id %>"><%= label %></label>
</div>
