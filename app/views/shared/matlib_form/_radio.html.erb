<% id ||= SecureRandom.uuid %>
<% label ||= '' %>
<% value ||= '' %>
<% name ||= '' %>
<% class_name ||= '' %>
<% disabled ||= false %>
<% checked ||= false %>
<% html_attr ||= {} %>

<div class="matlib-form-radio <%= class_name %>" <%= html_attr.keys.map{ |key| "#{key}=\"#{html_attr[key]}\"" }.join(' ').html_safe %>>
  <input type="radio" id="<%= id %>" value="<%= value %>" name="<%= name %>" <%= disabled ? 'disabled' : '' %> <%= checked ? 'checked' : '' %> onclick="event.stopPropagation();" />
  <label for="<%= id %>"><%= label %></label>
</div>
