<% id ||= SecureRandom.uuid %>
<% value ||= '' %>
<% name ||= '' %>
<% class_name ||= '' %>
<% placeholer ||= '' %>
<% disabled ||= false %>
<% html_attr ||= {} %>

<textarea
  id=<%= id %>
  name="<%= name %>"
  placeholer="<%= placeholer %>"
  class="border border-gray-300 rounded px-2 text-gray-500 focus:border-none focus:ring-black <%= class_name %>"
  <%= disabled ? 'disabled' : '' %>
  <%= html_attr.keys.map{ |key| "#{key}=\"#{html_attr[key]}\"" }.join(' ').html_safe %>
><%= value %></textarea>