<% id ||= SecureRandom.uuid %>
<% value ||= '' %>
<% name ||= '' %>
<% class_name ||= '' %>
<% placeholder ||= '' %>
<% disabled ||= false %>
<% html_attr ||= {} %>

<input
  id="<%= id %>"
  name="<%= name %>"
  value="<%= value %>"
  type="text"
  placeholder="<%= placeholder %>"
  class="border border-gray-300 h-8 rounded px-2 focus:border-transparent focus:ring-black <%= class_name %>"
  <%= disabled ? 'disabled' : '' %>
  <%= html_attr.keys.map{ |key| "#{key}=\"#{html_attr[key]}\"" }.join(' ').html_safe %>
/>