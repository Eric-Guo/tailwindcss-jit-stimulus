<% id ||= SecureRandom.uuid %>
<% value ||= '' %>
<% name ||= '' %>
<% class_name ||= '' %>
<% options ||= [] %>
<% disabled ||= false %>
<% html_attr ||= {} %>

<select
  name="<%= name %>"
  id="<%= id %>"
  class="border border-gray-300 h-8 rounded py-0 px-2 text-gray-500 focus:border-transparent focus:ring-black <%= class_name %>"
  <%= disabled ? 'disabled' : '' %>
  <%= html_attr.keys.map{ |key| "#{key}=\"#{html_attr[key]}\"" }.join(' ').html_safe %>
>
  <% options.each do |option| %>
    <option value="<%= option[:value] %>" <%= value == option[:value] ? 'selected' : '' %>><%= option[:label] %></option>
  <% end %>
</select>
