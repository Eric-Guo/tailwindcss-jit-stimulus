<%= render partial: 'shared/header', locals: { } -%>

<div class="relative mt-6 max-w-4xl mx-auto px-4 pb-8">
  <%= form_with url: material_search_path, method: :get do |f| %>
    <label for="search-box" class="sr-only">搜索</label>
    <span class="absolute inset-y-0 pl-4 pt-3">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </span>
    <%= text_field_tag :q, @q, placeholder: '黄金麻/镀膜玻璃/PC板', class: 'block w-full pl-12 pr-5 py-3 rounded-full border-2 border-gray-300 border-solid text-base text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-gray-500 focus:border-gray-500 focus:ring-offset-gray-500', id: 'search-box', autocomplete: "off" %>
  <% end %>
</div>

<div class="mx-4 xl:mx-6 2xl:mx-8 mb-4 border-b-2 border-gray-100 border-solid pb-3 text-center text-lg">
  <%= link_to '材料 （30）', material_search_path, class: "mx-3 border-b-2 border-gray-900 border-solid font-bold", style: 'padding-bottom: 0.9rem' -%>
  <%= link_to '案例 （60）', project_search_path, class: "mx-3" -%>
  <%= link_to '供应商 （7）', manufacturer_search_path, class: "mx-3" -%>
  <%= link_to '新闻 （0）', news_search_path, class: "mx-3" -%>
</div>

<%# 材料 %>
<div class="mx-4 xl:mx-6 2xl:mx-8 mt-6 2xl:mt-8 mb-16 grid grid-cols-8 gap-x-1.5 gap-y-10">
  <% %w[黄金麻 卡基诺金 世贸金麻 山东黄锈 莆田黄锈 卡拉麦里金 紫点金麻 黄金麻 卡基诺金 世贸金麻 山东黄锈 莆田黄锈 卡拉麦里金 紫点金麻].each_with_index do |name, i| %>
    <div>
      <% pic_url = "static/new_mat_g#{(i % 8)+1}.jpg" -%>
      <div>
        <img class="mx-auto w-full" src="<%= image_pack_path(pic_url) -%>" alt="">
        <h3 class="text-center mt-2 font-medium"><%= name -%></h3>
        <h4 class="text-center text-sm text-gray-400">石材</h4>
      </div>
    </div>
  <% end %>
</div>

