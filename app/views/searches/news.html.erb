<%= render partial: 'shared/header', locals: { } -%>

<div class="relative mt-6 max-w-4xl mx-auto px-4 pb-8">
  <%= form_with url: news_search_path, method: :get do |f| %>
    <label for="search-box" class="sr-only">搜索</label>
    <span class="absolute inset-y-0 pl-4 pt-3">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </span>
    <%= text_field_tag :q, @q, placeholder: '天华项目编号', class: 'block w-full pl-12 pr-5 py-3 rounded-full border-2 border-gray-300 border-solid text-base text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-gray-500 focus:border-gray-500 focus:ring-offset-gray-500', id: 'search-box', autocomplete: "off" %>
  <% end %>
</div>

<% if @q.present? %>

<div class="mx-4 xl:mx-6 2xl:mx-8 mb-4 border-b-2 border-gray-100 border-solid pb-3 text-center text-lg">
  <%= link_to "材料 （#{@count_hash[:material]}）", material_search_path(q: @q), class: "mx-3" -%>
  <%= link_to "案例 （#{@count_hash[:project]}）", project_search_path(q: @q), class: "mx-3" -%>
  <%= link_to "供应商 （#{@count_hash[:manufacturer]}）", manufacturer_search_path(q: @q), class: "mx-3" -%>
  <%= link_to "新闻 （#{@count_hash[:news]}）", news_search_path(q: @q), class: "mx-3 under-text-border font-bold", style: 'padding-bottom: 0.9rem' -%>
</div>

<% if @news.length > 0 %>
  <%# 新闻 %>
  <div class="mx-4 xl:mx-6 2xl:mx-8 mt-6 2xl:mt-8 mb-16 grid grid-cols-1 lg:grid-cols-2 2xl:grid-cols-3 gap-8">
    <% @news.each do |news| %>
      <a class="flex-grow flex border border-gray-100 border-solid" href="<%= news.url %>" target="_blank">
        <div class="flex-none w-36 h-36 flex flex-col justify-around bg-gray-100 m-2">
          <img class="w-full h-full object-cover" src="<%= mat_img_url(news.cover, '') -%>" alt="">
        </div>
        <div class="flex-1 flex flex-col justify-between px-8 py-5">
          <div>
            <div class="flex text-2xl text-left leading-tight">
              <h1 class="flex-1 w-0 font-bold truncate" title="<%= news.title -%>"><%= news.title -%></h1>
              <span class="flex-none ml-1 px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-400">
                材料在线
              </span>
              <% if news.mold_name.present? %>
                <span class="flex-none ml-1 px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-400">
                  <%= news.mold_name -%>
                </span>
              <% end %>
            </div>
            <h2 class="mt-3 text-1xl text-left line-clamp-2" title="<%= news.subtitle -%>"><%= news.subtitle -%></h2>
          </div>
          <time><%= news.created_at.strftime('%Y-%m-%d') %></time>
        </div>
      </a>
    <% end %>
  </div>
<% else %>
  <%= render 'empty' %>
<% end %>

<% end %>
