<%= render partial: 'shared/header', locals: { } -%>

<% tab_name ||= 'material' %>

<%
  placeholders = {
    material: '黄金麻/镀膜玻璃/PC板',
    project: '项目名称/石材/建筑一所',
    manufacturer: '东丽石业/真石漆',
    news: '天华项目编号',
  }
%>

<div class="relative mt-6 max-w-4xl mx-auto px-4 pb-8">
  <%= form_with url: manufacturer_search_path, method: :get do |f| %>
    <label for="search-box" class="sr-only">搜索</label>
    <span class="absolute inset-y-0 pl-4 pt-3">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </span>
    <%= text_field_tag :q, @q, placeholder: placeholders[tab_name.to_sym], class: 'block w-full pl-12 pr-5 py-3 rounded-full border-2 border-gray-300 border-solid text-base text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-gray-500 focus:border-gray-500 focus:ring-offset-gray-500', id: 'search-box', autocomplete: "off" %>
  <% end %>
</div>

<% if @q.present? %>

  <div class="mx-4 xl:mx-6 2xl:mx-8 mb-4 border-b-2 border-gray-100 border-solid pb-3 text-center text-lg">
    <%= link_to "材料 （#{@count_hash[:material]}）", material_search_path(q: @q),
      class: "mx-3 #{tab_name == 'material' ? 'under-text-border font-bold' : 'text-neutral-140'}",
      style: tab_name == 'material' ? 'padding-bottom: 0.9rem' : '',
      data: { turbo: false } -%>
    <%= link_to "案例 （#{@count_hash[:project]}）", project_search_path(q: @q),
      class: "mx-3 #{tab_name == 'project' ? 'under-text-border font-bold' : 'text-neutral-140'}",
      style: tab_name == 'project' ? 'padding-bottom: 0.9rem' : '',
      data: { turbo: false } -%>
    <%= link_to "供应商 （#{@count_hash[:manufacturer]}）", manufacturer_search_path(q: @q),
      class: "mx-3 #{tab_name == 'manufacturer' ? 'under-text-border font-bold' : 'text-neutral-140'}",
      style: tab_name == 'manufacturer' ? 'padding-bottom: 0.9rem' : '',
      data: { turbo: false } -%>
    <%= link_to "新闻 （#{@count_hash[:news]}）", news_search_path(q: @q),
      class: "mx-3 #{tab_name == 'news' ? 'under-text-border font-bold' : 'text-neutral-140'}",
      style: tab_name == 'news' ? 'padding-bottom: 0.9rem' : '',
      data: { tubro: false } -%>
  </div>

  <%= yield %>

<% end %>
